algoritmo "Calculador de idade"
var
   Idade, Nascimento, Ano_atual: Inteiro
inicio
      Escreva ("Em que ano estamos? ")
      Leia (Ano_atual)
      Escreva ("em que ano você nasceu? ")
      Leia (Nascimento)
      Idade <- Ano_atual - Nascimento
      Escreva ("Sua idade é", Idade)
fimalgoritmo